{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src/",
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "*": ["*", "*.js"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "tests/**/*"]
}
